<Window x:Class="MojiCollaTool.CanvasEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MojiCollaTool"
        mc:Ignorable="d"
        WindowStartupLocation="CenterOwner"
        Title="キャンバス拡大画面" Height="320" Width="700">
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid x:Name="VirtualImageGrid" Grid.Row="0" Grid.Column="0" VerticalAlignment="Top" Background="White" Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Border BorderBrush="Black" BorderThickness="1" Background="LightBlue" Width="120" Height="120" Grid.Row="1" Grid.Column="1">
                <TextBlock Text="画像" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="30"/>
            </Border>
            <StackPanel Orientation="Vertical" Grid.Row="0" Grid.Column="1">
                <Button Content="↑" VerticalAlignment="Top" FontSize="20"/>
                <local:UpDownTextBox ValueMinLimit="0" Height="28"/>
            </StackPanel>
            <StackPanel Orientation="Vertical" Grid.Row="2" Grid.Column="1">
                <local:UpDownTextBox ValueMinLimit="0" Height="28"/>
                <Button Content="↓" VerticalAlignment="Top" FontSize="20"/>
            </StackPanel>
            <StackPanel Orientation="Vertical" VerticalAlignment="Center" Grid.Row="1" Grid.Column="0">
                <Button Content="←" VerticalAlignment="Top" FontSize="20"/>
                <local:UpDownTextBox ValueMinLimit="0" Height="28"/>
            </StackPanel>
            <StackPanel Orientation="Vertical" VerticalAlignment="Center" Grid.Row="1" Grid.Column="2">
                <Button Content="→" VerticalAlignment="Top" FontSize="20"/>
                <local:UpDownTextBox ValueMinLimit="0" Height="28"/>
            </StackPanel>
        </Grid>
        <StackPanel Orientation="Vertical" Grid.Row="0" Grid.Column="1" Margin="5">
            <GroupBox Header="画像情報">
                <StackPanel Orientation="Horizontal" Margin="5">
                    <Label Content="横幅:"/>
                    <TextBox Width="100" IsReadOnly="True" Margin="0, 0, 20. 0"/>
                    <Label Content="縦幅:"/>
                    <TextBox Width="100" IsReadOnly="True"/>
                </StackPanel>
            </GroupBox>
            <GroupBox Header="キャンバス設定">
                <StackPanel Orientation="Vertical">
                    <StackPanel Orientation="Horizontal" Margin="5">
                        <Label Content="横幅:"/>
                        <TextBox Width="100" Margin="0, 0, 20. 0"/>
                        <Label Content="縦幅:"/>
                        <TextBox Width="100"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="5">
                        <Label Content="背景色:"/>
                        <Button Style="{DynamicResource ColorButtonStyle}" x:Name="CanvasColorButton" Width="100" Height="28" Background="White" BorderThickness="1" BorderBrush="Black" Click="CanvasColorButton_Click" />
                    </StackPanel>
                </StackPanel>
            </GroupBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="5">
            <Button x:Name="UpdateButton" Content="適用" Width="100" FontSize="20" Margin="0, 0, 20, 0" Click="UpdateButton_Click"/>
            <Button x:Name="OKButton" Content="OK" Width="100" FontSize="20" Click="OKButton_Click"/>
        </StackPanel>
    </Grid>
</Window>

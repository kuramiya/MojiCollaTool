<UserControl x:Class="MojiCollaTool.UpDownTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MojiCollaTool"
             mc:Ignorable="d"
             d:DesignHeight="28" d:DesignWidth="106">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <RepeatButton x:Name="DownButton" Content="▼" Width="28" FontSize="12" Grid.Column="0" Click="DownButton_Click"/>
        <TextBox x:Name="ValueTextBox" Text="0" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Width="50" Grid.Column="1" TextChanged="ValueTextBox_TextChanged" PreviewKeyDown="ValueTextBox_PreviewKeyDown"/>
        <RepeatButton x:Name="UpButton" Content="▲" Width="28" FontSize="12" Grid.Column="2" Click="UpButton_Click"/>
    </Grid>
</UserControl>

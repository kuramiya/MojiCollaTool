<Window x:Class="MojiCollaTool.MojiWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MojiCollaTool"
        mc:Ignorable="d"
        ContentRendered="Window_ContentRendered"
        Closing="Window_Closing"
        Title="MojiWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="0">
            <Label x:Name="IDLabel" Content="Moji ID:X"/>
            <Button x:Name="ReproductionButton" Content="Reproduction" Click="ReproductionButton_Click"/>
            <Button x:Name="DeleteButton" Content="Delete" Click="DeleteButton_Click"/>
        </StackPanel>
        <GroupBox Header="Text" Grid.Row="1">
            <TextBox x:Name="TextTextBox" Text="サンプル" AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Visible" TextChanged="TextTextBox_TextChanged"/>
        </GroupBox>
        <StackPanel Orientation="Vertical" Grid.Row="2">
            <GroupBox Header="Location">
                <StackPanel Orientation="Horizontal">
                    <Label Content="X:"/>
                    <local:UpDownTextBox x:Name="LocationXTextBox" IsMinusAllowed="True" ValueChanged="LocationTextBox_ValueChanged"/>
                    <Label Content="Y:"/>
                    <local:UpDownTextBox x:Name="LocationYTextBox" IsMinusAllowed="True" ValueChanged="LocationTextBox_ValueChanged"/>
                </StackPanel>
            </GroupBox>
            <GroupBox Header="Direction">
                <ComboBox x:Name="DirectionComboBox" SelectedIndex="0" SelectedValuePath="SelectedIndex" SelectionChanged="DirectionComboBox_SelectionChanged">
                    <ComboBoxItem Content="Yokogaki"/>
                    <ComboBoxItem Content="Tategaki"/>
                </ComboBox>
            </GroupBox>
            <GroupBox Header="Font">
                <StackPanel Orientation="Horizontal">
                    <Label Content="Font Size:"/>
                    <local:UpDownTextBox x:Name="FontSizeTextBox" IsZeroAllowed="False" ValueChanged="FontSizeTextBox_ValueChanged"/>
                    <Label Content="Font:"/>
                    <ComboBox x:Name="FontComboBox" Width="100"/>
                    <CheckBox x:Name="BoldCheckBox" Content="Bold" VerticalAlignment="Center" Checked="FontStyleCheckBox_CheckChanged" Unchecked="FontStyleCheckBox_CheckChanged"/>
                    <CheckBox x:Name="ItalicCheckBox" Content="Italic" VerticalAlignment="Center" Checked="FontStyleCheckBox_CheckChanged" Unchecked="FontStyleCheckBox_CheckChanged"/>
                </StackPanel>
            </GroupBox>
            <GroupBox Header="Margin">
                <StackPanel Orientation="Horizontal">
                    <Label Content="Character Margin:"/>
                    <local:UpDownTextBox x:Name="CharacterMarginTextBox" IsMinusAllowed="True" ValueChanged="MarginTextBox_ValueChanged"/>
                    <Label Content="Line Margin:"/>
                    <local:UpDownTextBox x:Name="LineMarginTextBox" IsMinusAllowed="True" ValueChanged="MarginTextBox_ValueChanged"/>
                </StackPanel>
            </GroupBox>
        </StackPanel>
    </Grid>
</Window>

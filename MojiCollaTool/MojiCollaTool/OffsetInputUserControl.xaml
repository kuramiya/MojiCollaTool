<UserControl x:Class="MojiCollaTool.OffsetInputUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MojiCollaTool"
             mc:Ignorable="d" 
             Background="White">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <Label Content="+" Grid.Column="0" HorizontalAlignment="Right"/>
        <local:UpDownTextBox x:Name="ValueUpDownTextBox" ValueMinLimit="0" Grid.Column="1" />
        <Label Content="px" HorizontalAlignment="Left" Grid.Column="2"/>
    </Grid>
</UserControl>
